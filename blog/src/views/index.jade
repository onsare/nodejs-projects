extends base

block content
	.container
		if posts
			h1 Recent Posts
			.row
			each post, i in posts
				div.card.col-md-4
					img(src="images/noimage.jpg")
					div.contents
						h2 #{post.title}
						p Posted by: #{post.author} #{moment(post.date).fromNow()}
						p #{post.body}
						button(class="btn btn-success") Read More
		else
			p There is nothing to display
		